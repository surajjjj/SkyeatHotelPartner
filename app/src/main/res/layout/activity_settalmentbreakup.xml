<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_weight="8"

        android:id="@+id/linearacceptordershow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/colorWhite">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/food_card">

            <LinearLayout
                android:id="@+id/ivCategoryImage"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-1dp"
                android:background="#f9f9f9"
                android:orientation="vertical"
                android:scaleType="centerCrop">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lin1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingRight="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="serif"
                        android:textColor="#a3c2c2"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvOrderId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:gravity="right"

                        android:textColor="#33cc33"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin2"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingRight="8dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:fontFamily="serif"
                        android:text="Delivery Charges"
                        android:textColor="?attr/actionModeSplitBackground"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvOrderHDCharges"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="?attr/actionModeSplitBackground"
                        android:textSize="11dp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin3"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin2"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3"
                        android:fontFamily="serif"
                        android:text="Estimated Payout :-"

                        android:textColor="@color/black"
                        android:textSize="14dp"
                        />

                    <TextView
                        android:id="@+id/tvOrderFinalTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:fontFamily="serif"
                        android:gravity="right"
                        android:textColor="#33cc33"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin4"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin3"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3"
                        android:fontFamily="serif"
                        android:text="Status:-"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                      />

                    <TextView

                        android:id="@+id/tvOrderType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:fontFamily="serif"

                        android:gravity="right"
                        android:textColor="@color/colorBalck"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin3"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3"
                        android:fontFamily="serif"
                        android:text="Est Payout Date: -"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                       />

                    <TextView
                        android:id="@+id/tvdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:fontFamily="serif"
                        android:gravity="right"
                        android:textColor="?attr/actionModeSplitBackground"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin3"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3"
                        android:fontFamily="serif"
                        android:text="Total Orders: -"
                        android:textColor="#a3c2c2"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/ttorder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:gravity="right"
                        android:textColor="?attr/actionModeSplitBackground"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/dotted_line" />
                <LinearLayout
                    android:visibility="gone"
                    android:background="@drawable/button_round_sett"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/lin3"
                    android:layout_marginTop="15dp"
                    >



                    <TextView

                        android:id="@+id/tvdelboyname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="serif"
                        android:layout_margin="0dp"
                        android:text="Show breakup"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin3"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3"
                        android:fontFamily="serif"
                        android:text="Order Status"
                        android:textColor="?attr/actionModeSplitBackground"
                        android:textSize="11dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvvillagename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="serif"

                        android:gravity="right"
                        android:textColor="#06F906"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_weight="2"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lin3"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_weight="9"
            android:background="#f9f9f9"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lin3"
            android:layout_marginTop="10dp"
            >

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="SETTLEMENT BREAKDOWN"
            android:textColor="@color/black"
            android:textSize="11dp"
           />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@+id/lin3"
            android:layout_marginTop="10dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_weight="7"


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"

                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/colorWhite">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_below="@+id/lin3"
                    android:layout_marginTop="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lin2"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="3"
                            android:fontFamily="serif"
                            android:text="Total Order"

                            android:textColor="@color/black"
                            android:textSize="14dp"
                          />

                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/ttlorders"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="serif"
                            android:gravity="right"
                            android:textColor="#33cc33"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:layout_below="@+id/lin2"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3"
                        android:fontFamily="serif"
                        android:text="Customer Payble (A)"

                        android:textColor="@color/black"
                        android:textSize="14dp"
                      />

                    <TextView
                        android:layout_gravity="center"
                        android:id="@+id/ttlorders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:fontFamily="serif"
                        android:gravity="right"
                        android:textColor="#33cc33"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin2"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3"
                        android:fontFamily="serif"
                        android:text="Service fees and other deductions (B)"

                        android:textColor="@color/black"
                        android:textSize="14dp"
                        />

                    <TextView
                        android:id="@+id/servicefees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:layout_gravity="center"
                        android:fontFamily="serif"
                        android:gravity="right"
                        android:textColor="#33cc33"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/dotted_line" />
                    <LinearLayout
                        android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lin2"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="3"
                        android:fontFamily="serif"
                        android:text="Estimate netpayout(A-B)"

                        android:textColor="@color/black"
                        android:textSize="14dp"
                       />

                    <TextView

                        android:id="@+id/estnetpayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:layout_gravity="center"
                        android:fontFamily="serif"
                        android:gravity="right"
                        android:textColor="#33cc33"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


</LinearLayout>

</LinearLayout>